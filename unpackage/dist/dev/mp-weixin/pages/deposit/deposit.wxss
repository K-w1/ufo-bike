.wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.wrap .progress {
    height: 190rpx;
    background: #f0f0f0;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
.wrap .progress .step {
      width: 95%;
}
.wrap .content {
    height: calc(100% - 190rpx);
    padding: 50rpx 40rpx 26rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
}
.wrap .content .money {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: end;
      -webkit-align-items: flex-end;
              align-items: flex-end;
      height: 60rpx;
      margin-bottom: 24rpx;
}
.wrap .content .money text:not(:nth-child(2)) {
        font-size: 36rpx;
}
.wrap .content .money text:nth-child(2) {
        font-size: 20rpx;
        color: #666;
        margin-right: auto;
}
.wrap .content .dec {
      font-size: 22rpx;
      color: #666;
      line-height: 40rpx;
}
.wrap .content .dec:last-child {
        margin-bottom: 34rpx;
}
.wrap .content .pay-way {
      height: 80rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      border-bottom: 1px solid #eee;
}
.wrap .content .pay-way .iconzhifubao {
        color: #1296db;
}
.wrap .content .pay-way .iconweixin {
        color: #00c800;
}
.wrap .content .pay-way text:nth-child(2) {
        margin-left: 22rpx;
}
.wrap .content .pay-way radio {
        margin-left: auto;
}
.wrap .content .pay-way:last-of-type {
        margin-bottom: 40rpx;
}
.wrap .content .pay-btn {
      width: 100%;
      margin-bottom: auto;
      height: 80rpx;
      line-height: 80rpx;
      background: #f0ad4e;
      color: #fff;
}
.wrap .content .bottom-text {
      text-align: center;
      color: #666;
}

