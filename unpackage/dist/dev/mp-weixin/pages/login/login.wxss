.wrap {
  padding: 160rpx 40rpx 26rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.wrap .logo {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 10rpx;
}
.wrap .logo image {
      width: 100%;
      height: 100%;
}
.wrap .logo + text {
    margin-bottom: 40rpx;
}
.wrap input {
    border-bottom: 1px solid #eee;
    width: 100%;
    height: 80rpx;
    padding: 20rpx 0;
}
.wrap .phone {
    margin-bottom: 10rpx;
}
.wrap .vertification-code {
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    margin-bottom: 10rpx;
}
.wrap .vertification-code button {
      min-width: 200rpx;
      max-width: 200rpx;
      background: #f0ad4e;
      height: 80rpx;
      margin-left: 10rpx;
      font-size: 28rpx;
      color: #fff;
      padding: 0;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.wrap .agreement {
    -webkit-align-self: start;
            align-self: start;
    margin-bottom: 52rpx;
}
.wrap .agreement text {
      font-size: 22rpx;
      color: #999;
}
.wrap .confirm-btn {
    margin-bottom: auto;
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    background: #f0ad4e;
    color: #fff;
    font-size: 32rpx;
}
.wrap .bottom-login {
    color: #666;
}
.wrap .bottom-login text {
      padding: 0 50rpx;
}
.wrap .bottom-login text:first-child {
      border-right: 1px solid #999;
}

